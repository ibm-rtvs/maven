<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.mycompany</groupId>
	<artifactId>it-plugin-samples</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<properties>
		<it-plugin-version>1.911.1</it-plugin-version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludedGroups>com.mycompany.it_plugin_samples.JUnitIntegrationTest</excludedGroups>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.20</version>
				<executions>
					<execution>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
						<configuration>
							<includes>
								<include>**/*.class</include>
							</includes>
							<groups>com.mycompany.it_plugin_samples.JUnitIntegrationTest</groups>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.hcl.products.test.it</groupId>
				<artifactId>it-plugin</artifactId>
				<version>${it-plugin-version}</version>
				<configuration>
					<forkCount>0</forkCount>
					<properties>
						<property>
							<name>it_config_xml</name>
							<value>
                                <![CDATA[
                                <projects>
                                    <project file="Sample/Sample.ghp" environment="PREPROD" run="api/RTCP/examples/phonebook/api/queryPhonebook/queryPhonebookStub"/>
                                </projects>
                                ]]>
							</value>
						</property>
					</properties>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>start-stubs</goal>
							<goal>stop-stubs</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>rtcp-site</id>
			<url>https://localhost:5443/maven2</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>rtcp-site</id>
			<url>https://localhost:5443/maven2</url>
		</pluginRepository>
	</pluginRepositories>
</project>